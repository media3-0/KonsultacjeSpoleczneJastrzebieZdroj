<section class="accountForm" style="border-top: 1px solid grey;">
  <div class="pagewidth">
    <h1>Zarejestruj się</h1>
    <div class="main">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <%= f.email_field :email, autofocus: true, placeholder: 'Adres e-mail' %>
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Hasło' %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Powtórz hasło' %>
          <%= f.text_field :name, placeholder: 'Imię i nazwisko' %>
        <div class="fieldCheckBox">
          <%= f.check_box :citizen %>
          <label for="user_citizen">Jestem mieszkańcem Jastrzębia-Zdroju</label>
        </div>
          <%= f.submit 'ZAREJESTRUJ SIĘ' %>
      <% end %>

      <%= render 'users/shared/links' %>
    </div>
    <div class="aside">
      <img src="<%= asset_path('account/3.png') %>" alt="people icon" class="marginTop"/>
    </div>
  </div>
</section>